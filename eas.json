{
"cli": {
  "version": ">= 12.0.0"
},
"build": {
  "development": {
    "developmentClient": true,
    "distribution": "internal"
  },
  "preview": {
    "distribution": "internal",
    "android": {
      "buildType": "apk"
    }
  },
  "production": {
    "autoIncrement": true,
    "env": {
      "NODE_ENV": "production"
    },
    "android": {
      "buildType": "aab"
    },
    "ios": {
      "simulator": false
    }
  }
},
"submit": {
  "production": {
    "android": {
      "serviceAccountKeyPath": "./google-service-account.json",
      "track": "internal"
    },
    "ios": {
      "appleId": "your-apple-id@example.com",
      "ascAppId": "your-app-store-connect-app-id",
      "appleTeamId": "your-apple-team-id"
    }
  }
}
}